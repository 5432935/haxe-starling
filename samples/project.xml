<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="OpenFLStarlingSamples" package="OpenFLStarlingSamples" version="1.0.0" company="P.J.Shand" />
	
	<!-- output -->
	<app main="Main" file="OpenFLStarlingSamples" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="320" height="480" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="../openfl-starling/src" />
	
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img" rename="img" />
	<assets path="assets/assets" rename="assets" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	<haxeflag name="-dce no" /> 
	
	<!--<haxeflag name="-D -swf-version=24" if="flash" ></haxeflag>-->
	<!--<haxeflag name="-D advanced-telemetry" if="flash" ></haxeflag>-->
	<!--<haxeflag name="--no-traces" if="flash" ></haxeflag>-->
	<app swf-version="12"/>
	
	
	
	<haxedef name="source-map-content" if="html5" />
	<haxedef name="dom" if="html5" />
	
</project>